@page
@model baitap.Pages.Products.DetailsModel
@{
    ViewData["Title"] = Model.Product.Name;
}

<div class="container mt-4">
    <div class="card">
        <div class="card-body">
            <div class="row">
                <div class="col-md-5">
                    @if (!string.IsNullOrEmpty(Model.Product.ImageUrl))
                    {
                        <img src="@Model.Product.ImageUrl" class="img-fluid rounded" alt="@Model.Product.Name" />
                    }
                    else
                    {
                        <div class="bg-light d-flex align-items-center justify-content-center rounded" style="height: 400px;">
                            <i class="fas fa-image text-muted fa-4x"></i>
                        </div>
                    }
                </div>
                <div class="col-md-7">
                    <h2 class="card-title mb-3">@Model.Product.Name</h2>
                    <p class="text-muted mb-3">
                        <i class="fas fa-folder me-2"></i>
                        Danh mục: @Model.Product.Category?.Name
                    </p>
                    <h4 class="text-danger mb-4">@Model.Product.Price.ToString("N0") VNĐ</h4>
                    @if (!string.IsNullOrEmpty(Model.Product.Description))
                    {
                        <div class="mb-4">
                            <h5>Mô tả sản phẩm</h5>
                            <p class="card-text">@Model.Product.Description</p>
                        </div>
                    }
                    <a href="javascript:history.back()" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i>Quay lại
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>